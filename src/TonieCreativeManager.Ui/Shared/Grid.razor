
@if (Items != null)
{
    <div class="grid @(RestrictItemWidth ? "restrict-item-width" : "")">
        @foreach (var item in Items)
        {
            <a class="item @(item.Restricted ? "restricted" : "")" href="@item.Url">
                <div class="cover" style="background-image:url('@item.ImageUrl');">
                    @if (!string.IsNullOrEmpty(item.SubImageUrl))
                    {
                        <div class="subcover @item.SubImageClass" style="background-image:url('@item.SubImageUrl')"></div>
                    }
                </div>
                <span>@item.Name</span>
            </a>
        }
    </div>
}

@code {

    [Parameter] public IEnumerable<GridItem> Items { get; set; }

    [Parameter] public bool RestrictItemWidth { get; set; }

}